{
  "name": "kugou",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite preview",
    "build": "vite build",
    "build:feature": "vue-tsc -b && vite build",
    "dev": "vite",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore --fix src"
  },
  "dependencies": {
    "@glidejs/glide": "^3.2.7",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/compiler-sfc": "^3.2.0",
    "axios": "^0.18.0",
    "core-js": "^3.45.0",
    "css-vars-ponyfill": "^1.15.3",
    "less": "^4.4.0",
    "mitt": "^3.0.1",
    "vite": "^7.1.2",
    "vue": "^3.2.0",
    "vue-router": "^4.5.1",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@babel/preset-env": "^7.28.3",
    "@types/axios": "^0.14.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "mockjs": "^1.0.1-beta3",
    "postcss-pixel-to-viewport": "^1.0.2",
    "prettier": "^1.14.3",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vconsole": "^3.2.0",
    "vite-plugin-babel": "^1.3.2",
    "vite-plugin-magic-preloader": "^1.0.5",
    "vue-tsc": "^1.8.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-pixel-to-viewport": {
        "viewportWidth": 375,
        "viewportUnit": "vw",
        "propertyBlacklist": [
          "letter-spacing"
        ],
        "minPixelValue": 2,
        "enableConvertComment": "on",
        "disableConvertComment": "off",
        "mediaQuery": false
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
